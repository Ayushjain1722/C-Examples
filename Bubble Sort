#include<stdio.h>
int main()
{
	int i,j,k,a[30],s;
	printf("enter the no of elements\n");
	scanf("%d",k);
	printf("Enter the elements\n");
	for(i=0;i<k;i++)
	{
		scanf("%d",&a[i]);
	}
	// bubble sorting
	for(i=0;i<k-1;i++)
	{
		for(j=0;j<k-1-i;i++)
		{
			if(a[j]>a[j+1])
			{
				s=a[j];
				a[j]=a[j+1];
				a[j+1]=s;
			}
		}
	} 
	printf("The elements in sorted array are:\n");
	for(i=0;i<k;i++)
	{
		printf("%d\n",a[i]);
	}
	
}
